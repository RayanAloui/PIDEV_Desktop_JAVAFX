<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<VBox prefHeight="700.0" prefWidth="900.0" spacing="20" alignment="CENTER"
      stylesheets="@Style/styles.css"
      xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="esprit.tn.controllers.OrphelinDetailsController"
      style="-fx-background-color: #f9f9f9; -fx-padding: 20;">

    <!-- En-tête -->
    <Label text="Détails de l'Orphelin" style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #333;" />

    <!-- Carte d'affichage des informations -->
    <VBox spacing="15" style="-fx-background-color: white; -fx-border-radius: 10; -fx-background-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 5);">

        <HBox spacing="10">
            <Label style="-fx-font-weight: bold; -fx-text-fill: #444;"/>
            <Label fx:id="lblNom" style="-fx-text-fill: #666;"/>
        </HBox>

        <HBox spacing="10">
            <Label style="-fx-font-weight: bold; -fx-text-fill: #444;"/>
            <Label fx:id="lblPrenom" style="-fx-text-fill: #666;"/>
        </HBox>

        <HBox spacing="10">
            <Label style="-fx-font-weight: bold; -fx-text-fill: #444;"/>
            <Label fx:id="lblDateNaissance" style="-fx-text-fill: #666;"/>
        </HBox>

        <HBox spacing="10">
            <Label style="-fx-font-weight: bold; -fx-text-fill: #444;"/>
            <Label fx:id="lblSexe" style="-fx-text-fill: #666;"/>
        </HBox>

        <HBox spacing="10">
            <Label style="-fx-font-weight: bold; -fx-text-fill: #444;"/>
            <Label fx:id="lblSituationScolaire" style="-fx-text-fill: #666;"/>
        </HBox>

        <HBox spacing="10">
            <Label text="  Tuteur Associé:" style="-fx-font-weight: bold; -fx-text-fill: #444;"/>
            <Label fx:id="lblTuteur" style="-fx-text-fill: #666;"/>
        </HBox>

    </VBox>

</VBox>

