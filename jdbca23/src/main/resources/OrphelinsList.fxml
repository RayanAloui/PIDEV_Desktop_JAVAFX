<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="700.0" prefWidth="900.0" spacing="10" alignment="CENTER" stylesheets="@Style/styles.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="esprit.tn.controllers.OrphelinsListController" style="-fx-padding: 20;">

    <Label text="Liste des Orphelins" style="-fx-font-size: 24px; -fx-font-weight: bold;" />

    <TextField fx:id="searchBar" promptText="Rechercher un orphelin..." />

    <FlowPane fx:id="orphelinsContainer" hgap="10" vgap="10" />

    <Button text="Retour" onAction="#AfficherOrphelins"/>

</VBox>

