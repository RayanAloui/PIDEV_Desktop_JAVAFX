<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="700" prefWidth="900" stylesheets="@Style/styles.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="esprit.tn.controllers.LoginTuteurController">
   <children>
   
       <VBox alignment="CENTER" layoutX="252.0" layoutY="184.0" prefHeight="332.0" prefWidth="396.0" spacing="20">
      <children>
              <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Connexion Tuteur" />
      
              <TextField fx:id="emailField" promptText="Email" />
              <PasswordField fx:id="cinField" promptText="CIN (Mot de passe)" />
      
              <Button fx:id="btnLogin" onAction="#handleLogin" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Se connecter" />
              <Label fx:id="errorLabel" textFill="red" />
      </children>
       </VBox>
      <Button layoutX="49.0" layoutY="22.0" mnemonicParsing="false" onAction="#login" text="LOGIN" />
   </children>

</AnchorPane>
