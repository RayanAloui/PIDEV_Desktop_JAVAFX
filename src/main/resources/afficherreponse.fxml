<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="esprit.tn.controllers.afficherreponseController">
   <children>
      <AnchorPane layoutX="15.0" layoutY="15.0" prefHeight="700.0" prefWidth="900.0" styleClass="root" stylesheets="@/styles.css">
         <children>
            <!-- TableView to display reponse data -->
            <TableView fx:id="tableViewreponses" layoutX="54.0" layoutY="200.0" prefHeight="300.0" prefWidth="427.0" styleClass="table-view">
               <columns>
                  <TableColumn fx:id="columnId" prefWidth="80.0" text="ID" />
                  <TableColumn fx:id="columncontenu" prefWidth="100.0" text="Description" />
                  <TableColumn fx:id="columndate" prefWidth="100.0" text="Date" />
                  <TableColumn fx:id="columnstatut" prefWidth="120.0" text="Statut" />
               </columns>
            </TableView>

            <!-- Label for the title -->
            <Label layoutX="301.0" layoutY="26.0" prefHeight="26.0" prefWidth="341.0" styleClass="title" text="Reponse Table" textAlignment="CENTER" />

            <!-- Buttons for actions -->
            <Button layoutX="64.0" layoutY="141.0" mnemonicParsing="false" onAction="#GoToAddReponse" styleClass="button add-button" text="+" />
            <Button layoutX="757.0" layoutY="611.0" mnemonicParsing="false" onAction="#DeleteReponse" styleClass="button" text="DELETE" />
            <Button layoutX="600.0" layoutY="611.0" mnemonicParsing="false" onAction="#GoToUpdateReponse" styleClass="button" text="UPDATE" />
         </children>
      </AnchorPane>
   </children>
</AnchorPane>