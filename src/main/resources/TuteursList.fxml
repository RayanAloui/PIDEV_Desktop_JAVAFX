<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="700.0" prefWidth="900.0" spacing="10" stylesheets="@Style/styles.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.TuteursListController">

    <!-- Titre -->
    <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-padding: 10;" text="Liste des Tuteurs" />

    <!-- Barre de recherche -->
    <TextField fx:id="searchBar" maxWidth="600" promptText="Rechercher un tuteur par ID , CIN ou Telephone ..." style="-fx-font-size: 14px; -fx-padding: 5; -fx-border-radius: 5; -fx-background-radius: 5;" />

    <!-- Conteneur pour afficher les tuteurs -->
    <FlowPane fx:id="tuteursContainer" hgap="10" maxHeight="600" maxWidth="800" style="-fx-padding: 10; -fx-background-color: #f4f4f4; -fx-border-radius: 5; -fx-background-radius: 5;" vgap="10" />
    <Button mnemonicParsing="false" text="Afficher Tuteurs" onAction="#AfficherTuteurs"/>

</VBox>
