<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="900.0" style="-fx-background-color: #f4f4f4;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="esprit.tn.controllers.Dashboard">

    <children>
        <!-- Sidebar -->
        <VBox prefHeight="600.0" prefWidth="200.0" spacing="10" style="-fx-background-color: #2C3E50; -fx-padding: 10;">
            <children>
                <!-- Dashboard Logo -->
                <Label style="-fx-font-size: 18px; -fx-text-fill: white; -fx-font-weight: bold;" text="Admin Panel" />

                <!-- Navigation Buttons -->
                <Button style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px;" text="Dashboard" />
                <Button style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px;" text="Users" />
                <Button style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px;" text="Reports" />
                <Button style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px;" text="Settings" />
                <Button style="-fx-background-color: #E74C3C; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 5px;" text="Logout" />
            </children>
        </VBox>

        <!-- Main Content Area -->
        <VBox layoutX="200.0" prefHeight="600.0" prefWidth="700.0" spacing="20">
            <children>
                <!-- Header Bar -->
                <HBox prefHeight="50.0" prefWidth="700.0" style="-fx-background-color: white; -fx-padding: 10;">
                    <children>
                        <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Admin Dashboard" />
                        <Pane HBox.hgrow="ALWAYS" />
                        <Button style="-fx-background-color: #3498DB; -fx-text-fill: white; -fx-background-radius: 5px;" text="Profile" />
                    </children>
                </HBox>

                <!-- Content Area -->
                <AnchorPane prefHeight="700.0" prefWidth="900.0">
                    <Label layoutX="50.0" layoutY="50.0" style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Welcome to Admin Dashboard" />
                </AnchorPane>
            </children>
        </VBox>
    </children>
</AnchorPane>
