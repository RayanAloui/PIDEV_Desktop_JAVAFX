<AnchorPane prefHeight="700.0" prefWidth="900.0" style="-fx-background-color: #faefe0; -fx-padding: 0px;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="esprit.tn.controllers.Dashboard">

    <!-- HEADER -->
    <AnchorPane prefHeight="96.0" prefWidth="900.0" style="-fx-background-color: #9b877e; -fx-padding: 10px;">
        <HBox alignment="CENTER_LEFT" layoutX="20" layoutY="20" spacing="20">
            <!-- User Info (Left) -->
            <VBox spacing="5">
                <Label fx:id="name" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #faefe0;" text="User Name" />
            </VBox>
        </HBox>

        <!-- Profile, Edit Profile, and Logout (Right) -->
        <HBox alignment="CENTER_RIGHT" layoutX="740.0" layoutY="25.0" spacing="20" />
    </AnchorPane>

    <!-- MAIN CONTENT AREA (Menu) -->
    <AnchorPane layoutY="96.0" prefHeight="566.0" prefWidth="900.0" style="-fx-padding: 20px; -fx-background-size: cover; -fx-background-position: center;">
        <!-- Sidebar -->
        <VBox prefHeight="526.0" prefWidth="257.0" spacing="10" style="-fx-background-color: #2C3E50; -fx-padding: 10;">
            <children>
                <!-- Dashboard Logo -->
                <Label style="-fx-font-size: 18px; -fx-text-fill: white; -fx-font-weight: bold;" text="Admin Panel" />

                <!-- Navigation Buttons -->
                <Button style="-fx-background-color: #eccd09; -fx-text-fill: white; -fx-font-size: 14px;" text="Dashboard" />
                <Button onAction="#GoToUsers" prefHeight="30.0" prefWidth="200.0" style="-fx-background-color: #e6c49a; -fx-text-fill: white; -fx-font-size: 14px;" text="Users" textAlignment="CENTER">
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin></Button>
                <Button prefWidth="200.0" style="-fx-background-color: #e6c49a; -fx-text-fill: white; -fx-font-size: 14px;" text="Orphelin" textAlignment="CENTER">
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin></Button>
                <Button prefHeight="30.0" prefWidth="200.0" style="-fx-background-color: #e6c49a; -fx-text-fill: white; -fx-font-size: 14px;" text="Visit" textAlignment="CENTER">
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin></Button>
            <Button prefHeight="30.0" prefWidth="200.0" style="-fx-background-color: #e6c49a; -fx-text-fill: white; -fx-font-size: 14px;" text="Don" textAlignment="CENTER">
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin></Button>
            <Button prefHeight="30.0" prefWidth="200.0" style="-fx-background-color: #e6c49a; -fx-text-fill: white; -fx-font-size: 14px;" text="Activite" textAlignment="CENTER">
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin></Button>
            <Button prefHeight="30.0" prefWidth="200.0" style="-fx-background-color: #e6c49a; -fx-text-fill: white; -fx-font-size: 14px;" text="Reclamation" textAlignment="CENTER">
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin></Button>
                <Button onAction="#LogOut" prefWidth="100.0" style="-fx-background-color: #E74C3C; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 5px;" text="Logout" />
            </children>
        </VBox>
      <TabPane layoutX="258.0" prefHeight="526.0" prefWidth="594.0" tabClosingPolicy="UNAVAILABLE">
        <tabs>
          <Tab text="Notification">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="463.0" prefWidth="596.0">
                     <children>
                        <TableView layoutX="36.0" layoutY="49.0" prefHeight="200.0" prefWidth="470.0">
                          <columns>
                            <TableColumn prefWidth="75.0" text="notification" />
                            <TableColumn prefWidth="75.0" text="date" />
                          </columns>
                        </TableView>
                     </children>
                  </AnchorPane>
            </content>
          </Tab>
          <Tab text="Statistique">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <PieChart layoutX="58.0" layoutY="49.0" />
                     </children>
                  </AnchorPane>
            </content>
          </Tab>
        </tabs>
      </TabPane>
    </AnchorPane>
   
    <!-- FOOTER -->
    <AnchorPane layoutY="620" prefHeight="82.0" prefWidth="900.0" style="-fx-background-color: #9b877e; -fx-padding: 10px;">
        <Label layoutX="20" layoutY="30" style="-fx-text-fill: #e6c49a; -fx-font-size: 14px;" text="Â© 2025 OrphenCare Center. All rights reserved." />
    </AnchorPane>

</AnchorPane>
