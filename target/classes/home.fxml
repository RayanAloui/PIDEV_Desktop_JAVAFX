<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="700.0" prefWidth="900.0" style="-fx-background-color: #f4f4f4; -fx-padding: 20px;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="esprit.tn.controllers.Home">

    <!-- User Info (Top-Left) -->
    <VBox layoutX="20" layoutY="20" spacing="5">
        <Label fx:id="name" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #333;" text="name" />
        <Label fx:id="email" style="-fx-font-size: 14px; -fx-text-fill: #666;" text="email" />
    </VBox>

    <!-- Profile Button (Top-Right) -->
    <Button fx:id="profileButton" layoutX="500" layoutY="20" onAction="#handleProfileButtonClick" style="-fx-background-color: #0078D7; -fx-text-fill: white;                    -fx-font-size: 14px; -fx-padding: 8px 16px;                    -fx-border-radius: 5px; -fx-background-radius: 5px;" text="Profile" />

    <!-- Logout Button (Top-Right, next to Profile Button) -->
    <Button fx:id="logoutButton" layoutX="600" layoutY="20" onAction="#handleLogoutButtonClick" style="-fx-background-color: #D32F2F; -fx-text-fill: white;                    -fx-font-size: 14px; -fx-padding: 8px 16px;                    -fx-border-radius: 5px; -fx-background-radius: 5px;" text="Logout" />
</AnchorPane>