<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="700.0" prefWidth="900.0" style="-fx-background-color: #f4f4f4;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="esprit.tn.controllers.ForgetPWD">

    <VBox alignment="CENTER" layoutX="222.0" layoutY="172.0" prefHeight="355.0" prefWidth="454.0" spacing="15">
        <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Forgot Password" />

        <TextField fx:id="emailField" prefWidth="300" promptText="Enter your phone number" style="-fx-padding: 8px; -fx-font-size: 14px; -fx-border-radius: 5px;" />

        <Button fx:id="sendSms" onAction="#sendMailButton" prefWidth="150" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px;" text="Send sms" />

        <Button fx:id="backButton" prefWidth="150" style="-fx-background-color: #d9534f; -fx-text-fill: white; -fx-font-size: 14px;" text="Back" />
    </VBox>

</AnchorPane>
