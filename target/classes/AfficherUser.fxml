<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="700.0" prefWidth="900.0" styleClass="root" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="esprit.tn.controllers.AfficherUserController">
    <children>
        <TableView fx:id="tableViewUsers" layoutX="54.0" layoutY="200.0" prefHeight="300.0" prefWidth="810.0" styleClass="table-view">
            <columns>
                <TableColumn fx:id="columnId" prefWidth="80.0" text="ID" />
                <TableColumn fx:id="columnName" prefWidth="80.0" text="Name" />
                <TableColumn fx:id="columnSurname" prefWidth="100.0" text="Surname" />
                <TableColumn fx:id="columnTelephone" prefWidth="100.0" text="Phone" />
                <TableColumn fx:id="columnEmail" prefWidth="120.0" text="Email" />
                <TableColumn fx:id="columnRole" prefWidth="80.0" text="Role" />
                <TableColumn fx:id="columnIsBlocked" prefWidth="80.0" text="isBlocked" />
                <TableColumn fx:id="columnIsConfirmed" prefWidth="100.0" text="isConfirmed" />
                <TableColumn fx:id="columnNumberVerification" prefWidth="100.0" text="num verif" />
                <TableColumn fx:id="columnToken" prefWidth="80.0" text="Token" />
            </columns>
        </TableView>

        <Label layoutX="301.0" layoutY="26.0" prefHeight="26.0" prefWidth="341.0" styleClass="title" text="Users Table" textAlignment="CENTER" />

        <Button layoutX="64.0" layoutY="141.0" mnemonicParsing="false" onAction="#GoToAddUser" styleClass="button add-button" text="+" />

        <Button layoutX="757.0" layoutY="611.0" mnemonicParsing="false" onAction="#DeleteUser" styleClass="button" text="DELETE" />

        <Button layoutX="600.0" layoutY="611.0" mnemonicParsing="false" onAction="#GoToUpdateUser" styleClass="button" text="UPDATE" />
    </children>
</AnchorPane>
